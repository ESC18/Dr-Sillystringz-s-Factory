@using Dr_Sillystringz_s_Factory.Models;
@model Engineer

<h1>Edit Engineer</h1>
<form asp-action="Edit">
    <input type="hidden" asp-for="EngineerId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialty" class="control-label">Specialty</label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
