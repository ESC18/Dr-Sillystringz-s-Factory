@using Dr_Sillystringz_s_Factory.Models;
@model List<Engineer>

<h1>Engineers</h1>
<p>
    <a asp-action="Create">Create New Engineer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var engineer in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => engineer.Name)</td>
                <td>@Html.DisplayFor(modelItem => engineer.Specialty)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@engineer.EngineerId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@engineer.EngineerId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@engineer.EngineerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
