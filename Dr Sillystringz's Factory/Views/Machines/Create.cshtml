@using Dr_Sillystringz_s_Factory.Models;
@model Dr_Sillystringz_s_Factory.Models.Machine

<h2>Create Machine</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InstallationDate"></label>
        <input asp-for="InstallationDate" class="form-control" />
        <span asp-validation-for="InstallationDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
